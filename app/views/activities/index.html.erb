<h1>Activities</h1>

<span>Project plan</span>
<span><%= @project.start_date %> - <%= @project.planned_end_date %></span>

<span style="background: green; color:white;">
  <%= link_to 'New', new_project_activity_path %>
</span>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Planned start date</th>
      <th>Planned end date</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Subcontractors</th>
      <th>Obs.</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <%= render @project.activities %>
  </tbody>
</table>